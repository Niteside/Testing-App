<h1>Listing reminders</h1>

<table>
  <tr>
    <th>Remind month</th>
    <th>Remind day</th>
    <th>Remind year</th>
    <th>Type</th>
    <th>Name</th>
    <th>Message</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reminders.each do |reminder| %>
  <tr>
    <td><%= reminder.remind_month %></td>
    <td><%= reminder.remind_day %></td>
    <td><%= reminder.remind_year %></td>
    <td><%= reminder.type %></td>
    <td><%= reminder.name %></td>
    <td><%= reminder.message %></td>
    <td><%= reminder.active %></td>
    <td><%= link_to 'Show', reminder %></td>
    <td><%= link_to 'Edit', edit_reminder_path(reminder) %></td>
    <td><%= link_to 'Destroy', reminder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

